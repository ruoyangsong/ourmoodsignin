<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.profile.MyHistoryActivity"
    android:orientation="vertical">

    <TextView
        android:text="My Mood Event History"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:id="@+id/textView"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context="com.example.profile.MyHistoryActivity"
        android:orientation="horizontal">


        <Button
            android:text="Filter"
            android:onClick="Filter"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/button2"
            android:layout_weight="0.06"
            android:backgroundTint="@android:color/holo_blue_dark" />


        <Button
            android:text="See In Map"
            android:onClick="SeeInMap"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_weight="0.06" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/list" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_user"
        android:onClick="backtohome"
        android:id="@+id/backtohome"
        android:layout_marginLeft="270dp"
        android:background="#00000000"/>


</LinearLayout>

