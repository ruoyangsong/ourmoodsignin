<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fliter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yifanwang.mymood1.Fliter">
    <CheckBox
        android:text="View Last Week"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:id="@+id/checkBox" />

    <CheckBox
        android:text="View Events with mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_alignEnd="@+id/checkBox"
        android:layout_marginTop="54dp"
        android:id="@+id/checkBox2" />

    <RadioButton
        android:text="Happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginStart="56dp"
        android:layout_marginTop="18dp"
        android:id="@+id/radioButton" />

    <RadioButton
        android:text="Shame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton"
        android:id="@+id/radioButton2" />

    <RadioButton
        android:text="Fear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton2"
        android:id="@+id/radioButton3"
        android:layout_below="@+id/radioButton2" />

    <RadioButton
        android:text="Disgust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton3"
        android:layout_alignStart="@+id/radioButton3"
        android:id="@+id/radioButton4" />

    <RadioButton
        android:text="Sad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton4"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_alignEnd="@+id/radioButton4"
        android:id="@+id/radioButton5" />

    <CheckBox
        android:text="View Events with keywords:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton5"
        android:layout_alignEnd="@+id/checkBox2"
        android:id="@+id/checkBox4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Ex:Name"
        android:ems="10"
        android:layout_marginStart="36dp"
        android:id="@+id/editText"
        android:layout_below="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_goright"
        android:layout_marginEnd="34dp"
        android:id="@+id/confirmfliter"
        android:onClick="confirmfliter"
        android:layout_below="@+id/editText"
        android:layout_alignParentEnd="true"
        android:background="#00000000"/>

</RelativeLayout>
